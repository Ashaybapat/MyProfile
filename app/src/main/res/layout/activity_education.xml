<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Education">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/degree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Masters in Electrical Engineering"
            android:textColor="#222222"/>
        <TextView
            android:layout_below="@id/degree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Massachusetts Institute Of Technology"
            android:textSize="12sp"
            android:textColor="#222222"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/degree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Masters in Physics"
            android:textColor="#222222"/>
        <TextView
            android:layout_below="@id/degree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Massachusetts Institute Of Technology"
            android:textSize="12sp"
            android:textColor="#222222"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingBottom="16dp">
        <TextView
            android:id="@+id/degree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Bachelors in Electrical Engineering"
            android:textColor="#222222"/>
        <TextView
            android:layout_below="@id/degree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Massachusetts Institute Of Technology"
            android:textSize="12sp"
            android:textColor="#222222"/>

    </RelativeLayout>





</LinearLayout>